<p>Author: <%= post.user.email %></p>

<p>Title: <%= post.title %></p>
<p>Body: <%= post.body %></p>

<p>Comments: <%= render post.comments %></p>

<%= form_for(:comment, url: comments_path) do |f| %>
  <%= f.text_field :text %>
  <%= f.hidden_field :post_id, value: post.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit 'save' %>
<% end %>
